<div class="box col-xs-10 col-xs-offset-1">
  <h1 class="text-center">Add a new course</h1>
  <%= simple_form_for @course, url: instructor_courses_path do |f| %>
    <%= f.input :title %><br/>
    <%= f.input :description %><br/>
    <%= f.input :cost %><br/>
    <br />
    <%= f.submit "Create", class: 'btn btn-success center-block' %>
    <br />
  <% end %>
  <br />
</div>