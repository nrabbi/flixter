<br />

<h1 class="text-center">Learn something new today!</h1>
<hr />

<% @courses.each do |course| %>
  <div class="hero-fixed col-xs-10 col-xs-offset-1">
    <h2 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h2>    
    <br />
    <%= image_tag course.image, class: 'img-responsive center-block' %><br/>
    <div class="col-sm-8 col-xs-12">
      <%= course.description %>
    </div>
    <div class="col-sm-4 col-xs-12 text-center">
      <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %><br/><br/>
    </div>

  </div>
  <br class="clr"/>
  <br class="clr"/>
  <br class="clr"/>
<% end %>    