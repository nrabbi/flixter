<br />
<div class="hero-fixed col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title%></h1>
  <br />
  <%= image_tag @course.image, class: 'img-responsive center-block' %>

  <br />
  <br />
    
  <span class="text-center">
  <h4>
    <span class="label label-default">
      <%= number_to_currency @course.cost %>
    </span><br/><br/>
    <%= @course.description %>
  </h4>
  </span>
   
  <% if current_user && current_user == @course.user %>
    <br /><br />
    <%= link_to 'Administer', instructor_course_path(@course), class: 'btn btn-danger btn-large pull-left' %>
  <% end %>
  <br/>
  <br/>
  <br/>
</div>

<br class="clr" />
<br class="clr" />

<h2 class="text-center"><u>Course Structure</u></h2><br/>

<div class="col-xs-10 col-xs-offset-1">
    <% @course.sections.each do |section| %>
    <br /><br />
      <div class="section text-center">
        <h3>
          <%= section.title %>
        </h3>
        <% section.lessons.each do |lesson| %>
          <div class="col-xs-12 col-sm-6">
            <div class="lesson text-center">
            <br />
              <%= link_to lesson_path(lesson) do %>
                <b><%= lesson.title %></b>
                <br />
                <%= lesson.subtitle %>
              <% end %>
            </div>
          </div>
      <% end %>
      <br class="clr" />
    </div>
  <% end %>
</div>

</div>